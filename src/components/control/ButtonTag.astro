---
interface Props {
  size?: string
  dot?: boolean
  href?: string
  label?: string
}
const { size, dot, href, label }: Props = Astro.props
---
<a href={href} aria-label={label} class="btn-regular h-8 text-sm px-3 rounded-lg flex items-center flex-row-reverse text-right">
    {dot && <div class="h-1 w-1 bg-[var(--btn-content)] dark:bg-[var(--card-bg)] transition rounded-md ml-2"></div>}
    <slot></slot>
</a>
